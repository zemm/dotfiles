[user]
	name = Jussi Rajala
	email = zemm@iki.fi
[push]
	default = simple
	followTags = true
[github]
	username = zemm
[credential]
	helper = cache --timeout=7200
[credential "https://github.com"]
	username = zemm
[merge]
	tool = meld
[diff]
	tool = meld
[mergetool]
	keepBackup = false
[color]
	ui = auto
# http://git-scm.com/docs/git-config
[color "branch"]
	current = green bold
	local = blue bold
	remote = magenta
	upstream = magenta bold
[color "diff"]
	meta = black bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	header = black bold
	added = green bold
	changed = magenta bold
	untracked = red
	branch = blue bold
	nobranch = red bold
	unmerged = red bold
[alias]
	st = status -s
	ci = commit
	co = checkout
	cb = checkout -b
	d = diff
	di = diff
	dc = diff --cached
	ff = merge --ff-only
	pullff = pull --ff-only
	noff = merge --no-ff
	b = branch
	ds = diff --stat
	l = log --graph --pretty="tformat:%C(yellow)%h%Creset\\ %Cgreen(%ar)%Creset\\ %C(blue)<%an>%Creset\\ %C(red)%d%Creset\\ %s"
	dh1 = diff HEAD~1
	dh2 = diff HEAD~2
	dh3 = diff HEAD~3
	dh4 = diff HEAD~4
	dh5 = diff HEAD~5
